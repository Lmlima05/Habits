// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Prisma suporta Mongo, Cockroach, SQL

model Habit {
  id            String @id @default(uuid()) // explicação assim que o hábito for criado no banco de dados, vai preexer o id automaticamente com um uuid(Universally Unique IDentifier)
  title         String
  created_at    DateTime

  @@map("habits")
}

model HabitWeekDay {
  id String @id @default(uuid())
  habit_id String
  week_day Int
  
  @@unique([habit_id, week_day])
  @@map ("habit_week_days")
}

model Day {
  id String @id @default(uuid())
  date DateTime

  @@unique([date])
  @@map ("days")
}

model DayHabit {
  id String @id @default(uuid())

  day_id String
  habit_id String

  @@unique([day_id, habit_id]) 
  @@map("day_habits")
}